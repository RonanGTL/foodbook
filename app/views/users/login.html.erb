		<%= flash[:alert] %>
	</div>
	<% end %>

	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-4 text-center">
			<h3 class="form-heading">Sign in to continue </h3>

			<form action="/users/login_complete" method="post">
  			<p><input class="form-input" type="text" name="username" placeholder="Username"></p>
 		 		<p><input class="form-input" type="password" name="password" placeholer="Password"></p>
 				<input class="btn btn-lg btn-block" type="submit" value="Sign in">
			</form>
		</div>
		<div class="col-md-4">
		</div>
	</div>
</div>
